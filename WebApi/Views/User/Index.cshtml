@model IEnumerable<WebApi.Models.User2Model>


@{
    ViewData["Title"] = "Index";
}


<h1 class="display-4">Lista Użytkowników</h1>

<p>
    <a class="btn btn-dark" asp-area="" asp-controller="Task" asp-action="Index">Wróć do listy zadań</a>
    <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Create">Dodaj użytkownika</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:20%">
                    @Html.DisplayFor(modelItem => item.Name)                   
                </td>
                <td style="width:25%">
                    @Html.DisplayFor(modelItem => item.LastName)                   
                </td>
                <td style="width:20%">
                    @Html.DisplayFor(modelItem => item.Email)                   
                </td>
                <td style="width:35%">
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.User2Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.User2Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.User2Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
